<%- include ../../partials/header.ejs %>
    <%- include ../../partials/navbar.ejs %>
        <%- include ../../partials/sidebar.ejs %>

            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Voucher</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item"><a href="/voucher">Voucher</a></li>
                                    <li class="breadcrumb-item active">Create</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                    <!-- /.container-fluid -->
                </section>

                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Form new voucher</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <form action="/voucher/create" method="POST" enctype="multipart/form-data">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="name">Game name</label>
                                        <input type="text" name="name" class="form-control" id="name"
                                            placeholder="Type your game name" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="category">Category</label>
                                        <select class="form-control select2" style="width: 100%;" name="category"
                                            id="category" data-placeholder="Select your category" required>
                                            <option selected="selected">Select your category</option>
                                            <% category.forEach(category=> { %>
                                                <option value="<%= category._id %>">
                                                    <%= category.name %>
                                                </option>
                                                <% }) %>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="nominals">Nominals</label>
                                        <div class="select2-purple">
                                            <select class="form-control select2" multiple="multiple"
                                                style="width: 100%;" name="nominals" id="nominals" required
                                                data-placeholder="Select your nominal">
                                                <% nominal.forEach(nominal=> { %>
                                                    <option value="<%= nominal._id %>">
                                                        <%= nominal.coinName %>
                                                            <%= nominal.price %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="image">Image</label>
                                        <input type="file" name="image" class="form-control" id="image"
                                            placeholder="Select your image">
                                        <br>
                                        <img src="" id="preview">
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Create</button>
                                </div>
                            </form>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.container-fluid -->
                </section>
                <!-- /.content -->
            </div>

            <%- include ../../partials/footer.ejs %>
                <%- include ../../partials/js.ejs %>


                    <script>
                        function readUrl(input) {
                            if (input.files && input.files[0]) {
                                const reader = new FileReader();

                                reader.onload = function (e) {
                                    $('#preview').attr('src', e.target.result)
                                    $('#preview').attr('width', '20%')
                                    $('#preview').attr('height', '20%')
                                }
                                reader.readAsDataURL(input.files[0])
                            }
                        }
                        $('#image').change(function () {
                            readUrl(this)
                        })
                    </script>