<%- include ../../partials/header.ejs %>
    <%- include ../../partials/navbar.ejs %>
        <%- include ../../partials/sidebar.ejs %>

            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Bank</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
                                    <li class="breadcrumb-item active">Update</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                    <!-- /.container-fluid -->
                </section>

                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Form Update Bank</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="POST">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="name">Name</label>
                                        <input type="text" name="name" class="form-control" id="name"
                                            placeholder="type your name" value="<%= bank.name %>">
                                    </div>
                                    <div class="form-group">
                                        <label for="bankName">Bank name</label>
                                        <!-- <input type="text" name="bankName" class="form-control" id="bankName"
                                            placeholder="type your bank name" value="<%= bank.bankName %>"> -->
                                        <select class="form-control select2" style="width: 100%;" name="bankName"
                                            required>
                                            <option disabled selected="selected">
                                                <%= bank.bankName %>
                                            </option>
                                            <option value="BCA">BCA</option>
                                            <option value="BNI">BNI</option>
                                            <option value="BRI">BRI</option>
                                            <option value="Mandiri">Mandiri</option>
                                            <option value="CIMB">CIMB</option>
                                            <option value="Bank Jago">Bank Jago</option>
                                            <option value="Credit Card">Credit Card</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="accountNumber">Account number</label>
                                        <input type="text" name="accountNumber" class="form-control" id="accountNumber"
                                            placeholder="type your account number" value="<%= bank.accountNumber %>">
                                    </div>
                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </form>
                        </div>
                        <!-- /.card-body -->
                        <!-- /.col -->
                    </div>
                    <!-- /.container-fluid -->
                </section>
                <!-- /.content -->
            </div>

            <%- include ../../partials/footer.ejs %>
                <%- include ../../partials/js.ejs %>
